<script>
    function filtrarCarros() {
        const marca = document.getElementById('marcaFiltro').value.toLowerCase();
        const preco = document.getElementById('precoMax').value ? parseFloat(document.getElementById('precoMax').value) : Infinity;
        const carros = document.querySelectorAll('.carro');

        carros.forEach(carro => {
            const carroMarca = carro.getAttribute('data-marca').toLowerCase();
            const carroPreco = parseFloat(carro.getAttribute('data-preco'));
            if ((marca === "" || carroMarca === marca) && carroPreco <= preco) {
                carro.style.display = "block";
            } else {
                carro.style.display = "none";
            }
        });
    }

    // N칰mero do WhatsApp (mude aqui para o seu!)
    const numeroWhatsApp = "5598999999999"; // formato: 55 + DDD + n칰mero

    document.querySelectorAll('.btn-whatsapp').forEach(botao => {
        botao.addEventListener('click', e => {
            e.preventDefault();
            const carro = botao.parentElement;
            const nome = carro.querySelector('h2').textContent;
            const preco = carro.querySelector('p').textContent;
            const mensagem = encodeURIComponent(`Ol치! Tenho interesse no ${nome} por ${preco}. Ainda est치 dispon칤vel?`);
            window.open(`https://wa.me/${numeroWhatsApp}?text=${mensagem}`, "_blank");
        });
    });
</script>


<script>
    const marcaFiltro = document.getElementById('marcaFiltro');
    const precoMax = document.getElementById('precoMax');
    const listaCarros = document.getElementById('listaCarros').children;

    function filtrarCarros() {
        const marca = marcaFiltro.value.toLowerCase();
        const preco = precoMax.value ? parseFloat(precoMax.value) : Infinity;

        for (let carro of listaCarros) {
            const carroMarca = carro.getAttribute('data-marca').toLowerCase();
            const carroPreco = parseFloat(carro.getAttribute('data-preco'));
            const mostrar = 
                (marca === "" || carroMarca === marca) &&
                (carroPreco <= preco);
            carro.style.display = mostrar ? "block" : "none";
        }
    }

    marcaFiltro.addEventListener('change', filtrarCarros);
    precoMax.addEventListener('input', filtrarCarros);

    // Bot칚o WhatsApp autom치tico
    const botoes = document.querySelectorAll('.btn-whatsapp');
    botoes.forEach(botao => {
        botao.addEventListener('click', e => {
            e.preventDefault();
            const carro = botao.parentElement;
            const nome = carro.querySelector('h2').textContent;
            const preco = carro.querySelector('p').textContent;
            const numero = "559999999999"; // <-- seu n칰mero aqui com DDI e DDD
            const mensagem = encodeURIComponent(`Ol치! Tenho interesse no ${nome} de ${preco}. Ainda est치 dispon칤vel?`);
            window.open(`https://wa.me/${numero}?text=${mensagem}`, "_blank");
        });
    });
</script>


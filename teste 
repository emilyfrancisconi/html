<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
const numeroWhatsApp = "5598999999999"; // seu n√∫mero

function atualizarCarrossel() {
    const marca = document.getElementById('marcaFiltro').value.toLowerCase();
    const preco = document.getElementById('precoMax').value ? parseFloat(document.getElementById('precoMax').value) : Infinity;

    const items = document.querySelectorAll('#carouselExampleIndicators .carousel-item');
    items.forEach(item => {
        const nome = item.querySelector('h5').textContent.toLowerCase();
        const precoCarro = parseFloat(item.getAttribute('data-preco'));
        if ((marca === "" || nome.includes(marca)) && precoCarro <= preco) {
            item.style.display = "block";
        } else {
            item.style.display = "none";
        }
    });

    // Ativa primeiro item vis√≠vel
    const visiveis = Array.from(items).filter(i => i.style.display !== "none");
    items.forEach(i => i.classList.remove('active'));
    if (visiveis.length > 0) visiveis[0].classList.add('active');
}

// Eventos em tempo real
document.getElementById('marcaFiltro').addEventListener('input', atualizarCarrossel);
document.getElementById('precoMax').addEventListener('input', atualizarCarrossel);

// Adiciona bot√£o WhatsApp em cada slide
document.querySelectorAll('#carouselExampleIndicators .carousel-item').forEach(item => {
    const nome = item.querySelector('h5').textContent;
    const preco = item.querySelector('h6').textContent;
    const btn = document.createElement('a');
    btn.href = `https://wa.me/${numeroWhatsApp}?text=${encodeURIComponent(`Ol√°! Tenho interesse no ${nome} de ${preco}. Ainda est√° dispon√≠vel?`)}`;
    btn.target = "_blank";
    btn.className = "btn-whatsapp";
    btn.textContent = "Falar no WhatsApp";
    item.querySelector('.carousel-caption').appendChild(btn);
});
</script>

